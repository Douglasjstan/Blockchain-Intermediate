<%- include('partials/header') %>

<div class="container mt-5">
  <h1>Withdrawal</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">
          <style>
            table, th, td {
              border: 1px solid black;
              padding: 10px;
            }
            table.center{
              margin-left: auto;
              margin-right: auto;
            }
          </style>

          <form action="/withdraw" method="POST">
            <div class="form-group>">
              <Table>
                <tr>
                  <td colspan="2">
                      <Strong><p style="color: red"><%=STATUS%></p></Strong>
                  </td>
                </tr>
                <tr>
                  <td><label for="NRIC">NRIC</label></td>
                  <td><label for="NRIC"><%=NRIC%></label>
                </tr>
                <tr>
                  <td><label for="NRIC_Name">NRIC Name</label></td>
                  <td><label for="NRIC_NAME"><%=NRIC_NAME%></label></td>
                </tr>
                <tr>
                  <td><label for="Amount">Amount</label></td>
                  <td><label for="AMOUNT"><%=AMOUNT%></label></td>
                </tr>
                <tr>
                  <td><label for="Interest"><Strong><p style="color: red">Interest<br>(This amount will be forfeited)</p></Strong></label></td>
                  <td><label for="INTEREST"><Strong><p style="color: red"><%=INTEREST%></p></Strong></label></td>
                </tr>
                <tr>
                  <td><label for="Bank Number">Bank Number<br>Amount will be returned to this account</label></td>
                  <td><label for="PAYEE_ACCOUNT_NUMBER"><%=PAYEE_ACCOUNT_NUMBER%></label></td>
                </tr>
                <tr>
                  <td><label for="Bank Name">Bank Name<br>Amount will be returned to this account</label></td>
                  <td><label for="PAYEE_ACCOUNT_NAME"><%=PAYEE_ACCOUNT_NAME%></label></td>
                </tr>
              </Table>
              <br>
              <button type="submit" class="btn btn-dark" name="nric" value=<%=NRIC%>>Confirm</button>
              <button type="submit" class="btn btn-dark" name="nric" value="">Cancel</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>