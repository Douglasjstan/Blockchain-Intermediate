<%- include('partials/header') %>

<div class="container mt-5">
  <h1>Change Password</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">
          <style>
            table, th, td {
              border: 1px solid black;
              padding: 10px;
            }
            table.center{
              margin-left: auto;
              margin-right: auto;
            }
          </style>

          <form action="/changePassword" method="POST">
            <div class="form-group>">
              <Table>
                <tr>
                  <td colspan="2">
                      <Strong><p style="color: red"><%=STATUS%></p></Strong>
                  </td>
                </tr>
                <tr>
                  <td><label for="NRIC">NRIC</label></td>
                  <td><label for="nric"><%=NRIC%></label>
                </tr>
                <tr>
                  <td><label for="NRIC_Name">NRIC Name</label></td>
                  <td><label for="nric_name"><%=NRIC_NAME%></label></td>
                </tr>
                <tr>
                  <td><label for="password">Old Password</label></td>
                  <td><input type="password" class="form=control" name="password" value="" required autocomplete="off"></td>
                </tr>
                <tr>
                  <td><label for="new_password">New Password</label></td>
                  <td><input type="password" class="form=control" name="new_password" required autocomplete="off"></td>
                </tr>
              </Table>
              <br>
              <button type="submit" class="btn btn-dark" name="nric" value=<%=NRIC%>>Update Password</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>